{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "node",
      "hardhat"
    ],
    "allowJs": true
  },
  "include": [
    "deploy",
    "test",
    "tasks",
    "hardhat.config.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}